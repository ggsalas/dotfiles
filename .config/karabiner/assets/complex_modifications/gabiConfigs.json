{
  "title": "Gabi presonal preferences",
  "rules": [
    {
      "description": "alt+' instead alt+e to add special characters (á, é, í, ó, ú)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "quote",
            "modifiers": {
              "mandatory": ["left_option"]
            }
          },
          "to": [{ "key_code": "e", "modifiers": ["left_option"] }]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "quote",
            "modifiers": {
              "mandatory": ["right_option"]
            }
          },
          "to": [{ "key_code": "e", "modifiers": ["left_option"] }]
        }
      ]
    },
    {
      "description": "Toggle caps_lock by pressing left_shift + right_shift at the same time",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "left_shift",
            "modifiers": {
              "mandatory": ["right_shift"],
              "optional": ["caps_lock"]
            }
          },
          "to": [
            {
              "key_code": "caps_lock"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "left_shift"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "right_shift",
            "modifiers": {
              "mandatory": ["left_shift"],
              "optional": ["caps_lock"]
            }
          },
          "to": [
            {
              "key_code": "caps_lock"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "right_shift"
            }
          ]
        }
      ]
    },
    {
      "description": "Home as show desktop",
      "manipulators": [
        {
          "from": {
            "key_code": "home"
          },
          "to": [
            {
              "key_code": "f11"
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "PageUp as Screenshot",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "page_up"
          },
          "to": [
            {
              "key_code": "5",
              "modifiers": ["left_command", "left_shift"]
            }
          ]
        }
      ]
    },
    {
      "description": "[option+shift] Change tab to option+shift if pressed with other keys",
      "manipulators": [
        {
          "from": {
            "key_code": "tab"
          },
          "to": [
            {
              "key_code": "left_shift",
              "modifiers": ["left_option"]
            }
          ],
          "to_if_alone": [
            {
              "key_code": "tab"
            }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}
